{
  "manifest_version": 2,
  "name": "ONOS Tracker Info",
  "short_name": "ONOSTrackInfo",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "libs/psl.min.js", 
      "libs/adblocker.umd.min.js", 
      "keys.js",
      "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
