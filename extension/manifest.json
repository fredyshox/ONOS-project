{
  "manifest_version": 2,
  "name": "ONOS Tracker Info",
  "short_name": "ONOSTrackInfo",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "libs/psl.min.js", 
      "libs/adblocker.umd.min.js", 
      "keys.js",
      "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  }
}
